<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/zhizhi_list_item_padding_left_right"
    android:paddingRight="@dimen/zhizhi_list_item_padding_left_right"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/zhizhi_item_big_cycle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/zhizhi_item_big_cycle" />

    <ImageView
        android:id="@+id/zhizhi_item_line"
        android:layout_width="1dp"
        android:layout_height="30dp"
        android:layout_below="@id/zhizhi_item_big_cycle"
        android:layout_marginLeft="7.5dp"
        android:src="@color/zhizhi_top_cycle_stroke_color" />

    <ImageView
        android:id="@+id/zhizhi_item_small_cycle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/zhizhi_item_line"
        android:src="@mipmap/zhizhi_item_small_cycle" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/zhizhi_item_small_cycle"
        android:layout_marginTop="-30dp"
        android:layout_toRightOf="@id/zhizhi_item_small_cycle"
        android:background="@drawable/zhizhi_item_bubble"
        android:padding="10dp"
        >

        <TextView
            android:id="@+id/zhizhi_item_bubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="这是测试的小贴士！！！"
            android:textSize="12sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/zhizhi_item_line_2"
        android:layout_width="1dp"
        android:layout_height="30dp"
        android:layout_below="@id/zhizhi_item_small_cycle"
        android:layout_marginLeft="7.5dp"
        android:src="@color/zhizhi_top_cycle_stroke_color" />

    <ImageView
        android:id="@+id/zhizhi_item_last_big_cycle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/zhizhi_item_line_2"
        android:src="@mipmap/zhizhi_item_big_cycle" />

</RelativeLayout>