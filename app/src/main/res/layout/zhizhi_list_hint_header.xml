<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/zhizhi_top"
    android:orientation="vertical"
    android:background="@color/zhizhi_top_background_color"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="@dimen/zhizhi_top_cycle_image_width_height"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginLeft="@dimen/zhizhi_top_day_hint_main_margin_left"
            android:paddingLeft="@dimen/zhizhi_top_day_hint_main_padding_left"
            android:paddingRight="@dimen/zhizhi_top_day_hint_main_padding_right"
            android:background="@drawable/zhizhi_top_day_hint_shape"
            >
            <TextView
                android:id="@+id/zhizhi_top_day_hint_tv_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/zhizhi_top_day_hint_text"
                android:textSize="16sp"
                android:textColor="#cccccc"
                />

            <TextView
                android:id="@+id/zhizhi_top_day_hint_tv_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:textColor="#915559"
                android:text="18天"
                />

        </LinearLayout>

        <ImageView
            android:id="@+id/zhizhi_top_cycle_image"
            android:layout_width="@dimen/zhizhi_top_cycle_image_width_height"
            android:layout_height="@dimen/zhizhi_top_cycle_image_width_height"
            android:layout_marginRight="-43dp"
            android:src="@mipmap/zhizhi_user_image"
            android:scaleType="center"
            android:background="@drawable/zhizhi_top_cycle_image_shape" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="这是质质的提示哦！！！"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="18sp"
        android:gravity="center"
        android:background="@drawable/zhizhi_middle_text_shape" />

</LinearLayout>