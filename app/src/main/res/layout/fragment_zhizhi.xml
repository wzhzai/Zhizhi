<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cleverzone.zhizhi.fragment.ZhizhiFragment">

    <LinearLayout
        android:id="@+id/zhizhi_top"
        android:orientation="vertical"
        android:background="@color/zhizhi_top_background_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            >

            <TextView
                android:id="@+id/zhizhi_top_day_hint_text"
                android:layout_width="200dp"
                android:layout_height="@dimen/zhizhi_top_cycle_image_width_height"
                android:background="@drawable/zhizhi_top_day_hint_shape"
                android:text="adfasdfsadfasdfasdf"
                android:layout_centerInParent="true"
                android:paddingLeft="58dp"
                />

            <ImageView
                android:id="@+id/zhizhi_top_cycle_image"
                android:layout_width="@dimen/zhizhi_top_cycle_image_width_height"
                android:layout_height="@dimen/zhizhi_top_cycle_image_width_height"
                android:layout_toLeftOf="@id/zhizhi_top_day_hint_text"
                android:layout_marginRight="-43dp"
                android:background="@drawable/zhizhi_top_cycle_image_shape"
                />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="adasfsafasdfsa"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="13dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/zhizhi_middle_text_shape"
            />

    </LinearLayout>

</FrameLayout>
